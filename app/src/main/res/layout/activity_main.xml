<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableLayout
            android:id="@+id/ttt_table"
            android:layout_width="221dp"
            android:layout_height="222dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.767">

        <TableRow android:layout_width="fill_parent"
                  android:layout_height="match_parent">
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button1"/>
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button2"/>
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button3"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent"
                  android:layout_height="match_parent">
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button4"/>
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button5"/>
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button6"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent"
                  android:layout_height="match_parent">
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button7"/>
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button8"/>
            <Button
                    android:text=""
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:textSize="35sp"
                    android:onClick="markButton"
                    android:gravity="center"
                    android:id="@+id/button9"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="CLEAR"
            android:onClick="clearBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ttt_table" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>